@model List<appinno2.ClassCollection.WebServiceModels.LatestEventsForList>
@{
    ViewBag.Title = "LatestEvents";
}

@{
    foreach (var item in Model)
    {
        var summary = @Html.Raw(HttpUtility.HtmlDecode(item.summary));
        string SubStringHtmlSummary = appinno2.ClassCollection.SubString.SubStringHtml(summary, 0, 180);

        <div style="height:60%;padding: 2px 5px;">
            <img src="http://appinno.ir/uploads/event/images/@item.image" class="img-responsive" style="width:150px;height:150px;padding: 15px 0px; margin:auto;" />
        </div>
        <div style="height:40%;padding: 2px 10px;">
            <span style="font-weight:bold;">@item.title</span>
            <br />
            <p style="text-align: justify;">@SubStringHtmlSummary</p>
        </div>
    }
}


